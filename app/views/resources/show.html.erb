<%= render partial: "layouts/header", 
    locals: { 
        title: "Resources", 
        icon: "speaker_group"
    }
%>
<div class="w3-container w3-center">
<div style="max-width:400px; margin-top: 100px;", class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin w3-round w3-padding">
    <header class="w3-container w3-text-blue">
        <div class="w3-container">
            <h2 class="w3-text-blue w3-left"><%= @resource.name %></h2>
            <div class="w3-left w3-text-blue"><%= @resource.service.name %></div>
        </div>
        <div class="w3-container w3-margin w3-text-blue w3-left"><%= @resource.description %></div>
    </header>

    <div class="w3-panel w3-pink w3-card-4 w3-margin w3-center">
        <p>Next intervention : xx nnn xxxx</p>
    </div>

    <div class="w3-container w3-center w3-text-blue w3-margin-bottom w3-padding">
        
        <% 3.times do %>
            <p class="w3-text-blue w3-text-green">"xxxxxx"</p>
        <% end %>

        <% 2.times do %>
            <p class="w3-text-blue w3-text-orange">"xxxxxx"</p>
        <% end %>

        <% 1.times do %>
            <p class="w3-text-blue w3-text-red w3-large">"xxxxxx"</p>
        <% end %>

        <% 9.times do %>
            <p class="w3-text-blue w3-text-grey">"xxxxxx"</p>
        <% end %>
        
    </div>

    <footer class="w3-container w3-text-blue">
        <div class="w3-tag w3-light-blue w3-round w3-text-white w3-small w3-margin w3-left"><%= @resource.groupe.name %></div>
        <div class="w3-right w3-text-blue"><%= @resource.referent.completeFullname %></div>
    </footer>
</div>
</div>