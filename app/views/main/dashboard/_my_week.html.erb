
<h3>My Week</h3>

<div class="w3-container w3-row w3-margin">
    <% 5.times do |indexJour| %>
        <% dateOfTheDay = dateFirstDayOfTheCurrentWeek + indexJour %>
        <div class="w3-col 
            w3-<%= isWeekend?(dateOfTheDay) ? "grey" : "white" %> 
            w3-center 
            w3-margin-right
            w3-margin-top
            w3-padding:0
            w3-round
            w3-border w3-border-pink
            m2">
            <%= getDateFrenchFormatedWithDayName(dateOfTheDay) %>
            <hr>
            Jobs
        </div>
    <% end %>
</div>
