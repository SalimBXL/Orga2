<div class="card border rounded-3 mx-auto mt-5 ms-5 me-5 shadow">
    <div class="card-body">
        <h1 class="card-title pb-3">
            <%= image_tag(
            "logo.png",
            width: "64px",
            
            class: "img-fluid",
            )
        %>
            Log in
        </h1>

        <div class="card-text pb-5">
            <%= form_with model: @user, url: session_path do |form| %>
                <div>    
                    <%= form.email_field :email, 
                        placeholder: "Email",
                        class: "form-control"
                        %>
                    <%= form.password_field :password, 
                        placeholder: "Password",
                        class: "form-control"
                        %>
                </div>
                <div class="pt-3">
                    <%= form.submit "Log in", class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>

        <div class="">
            <%= link_to "Forgot your password ?", new_password_reset_path %>
        </div>
    </div>
</div>